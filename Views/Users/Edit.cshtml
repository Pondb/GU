@model GU.Models.User
@{
    ViewData["Title"] = "Register";
}

<script language="javascript" type="text/javascript">

    

    

    $(document).ready(function () {

        $('#Birthdate').datepicker({
            dateFormat: 'dd/mm/yy',
            changeMonth: true,
            changeYear: true,
            yearRange: '1900:2200'

        });

        $('#btnBirthdate').click(function () {

            $('#Birthdate').val("");

        });


        //Last Login Converted
        if ($('#Last_Login').text() == "") {

        }
        else {


            var lastLogin_original = $('#Last_Login').text();

            var login_y = lastLogin_original.substring(0, 4);
            var login_m = lastLogin_original.substring(4, 6);
            var login_d = lastLogin_original.substring(6);

            var lastLogin_Rearrange = login_d + "/" + login_m + "/" + login_y;

            $('#Last_Login').text(lastLogin_Rearrange);
        }


        if ($('#Birthdate').val() == "") {

        }
        else {
            

            var birthdate_Original = $('#Birthdate').val();

            var birthdate_Y = birthdate_Original.substring(0, 4);
            var birthdate_M = birthdate_Original.substring(4, 6);
            var birthdate_D = birthdate_Original.substring(6);

            var birthdate_Re = birthdate_D + "/" + birthdate_M + "/" + birthdate_Y;

            $('#Birthdate').val(birthdate_Re);
        }

       
        $('#btnSubmit').click(function () {

            
            var first_name = $("#First_Name").val();
            var last_name = $("#Last_Name").val();
            var birthdate = $("#Birthdate").val();
            var gender = $('#Gender').val();

            var validateArray = [];

            
            if (first_name == "") {
                validateArray.push("Please enter <b>'First Name'</b> before submit.");
                //alert("Please select 'First name' before submit.");
              
            }
            if (last_name == "") {
                validateArray.push("Please enter <b>'Last Name'</b> before submit.");
                //alert("Please select 'Last name' before submit.");
               

            }
            if (birthdate == "") {
                validateArray.push("Please enter <b>'Birthdate'</b> before submit.");
                //alert("Please enter 'Birthdate' before submit.");
              
            }
            if (gender == 0) {
                //alert("Please select 'Gender' before submit.")
                
            }
            


            if (validateArray.length > 0) {
                var text = "";

                var i;

                for (i = 0; i < validateArray.length; i++) {
                    text += validateArray[i] + "<br>";
                }

                alertModal_Popup("Warning", "warning", text);

                //BootstrapDialog.show({ title: 'Caution', type: BootstrapDialog.TYPE_WARNING, message: text });
                return false;
            }
            else {

                return true;
                

            }

        });

    });


    

</script>

